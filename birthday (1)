  <div class="celebrate" id="celebrate">
    <div class="message" id="message">Happy Birthday!</div>
  </div>

  <div class="stars" id="stars"></div>

  <script>
    const gift=document.getElementById('gift');
    const lid=document.getElementById('lid');
    const overlay=document.getElementById('overlay');
    const nameInput=document.getElementById('nameInput');
    const sendBtn=document.getElementById('sendBtn');
    const celebrate=document.getElementById('celebrate');
    const message=document.getElementById('message');
    const stars=document.getElementById('stars');

    // stars background
    for(let i=0;i<120;i++){
      const s=document.createElement('div');
      s.className='star';
      s.style.top=Math.random()*100+'%';
      s.style.left=Math.random()*100+'%';
      s.style.animationDelay=(Math.random()*3)+'s';
      stars.appendChild(s);
    }

    gift.addEventListener('click',()=>{
      lid.style.transform='translateY(-60%) rotateX(40deg)';
      setTimeout(()=>overlay.classList.add('show'),600);
    });

    sendBtn.addEventListener('click',()=>{
      overlay.classList.remove('show');
      const name=nameInput.value.trim()||'Friend';
      showCelebration(name);
    });

    function showCelebration(name){
      message.textContent=`ðŸŽ‰ Happy Birthday, ${name}! ðŸŽ‰`;
      setTimeout(()=>message.classList.add('show'),200);

      // Balloons
      const colors=['linear-gradient(180deg,#ff9a9e,#fecfef)','linear-gradient(180deg,#a1c4fd,#c2e9fb)','linear-gradient(180deg,#fbc2eb,#a6c1ee)'];
      for(let i=0;i<6;i++){
        const b=document.createElement('div');
        b.className='balloon';
        b.style.left=(5+Math.random()*90)+'%';
        b.style.bottom='-25%';
        b.style.background=colors[i%colors.length];
        b.style.animationDelay=(Math.random()*2)+'s';
        celebrate.appendChild(b);
      }

      // Fireworks
      for(let i=0;i<25;i++){
        const f=document.createElement('div');
        f.className='firework';
        f.style.left=(Math.random()*100)+'%';
        f.style.top=(Math.random()*50)+'%';
        f.style.background=['#ff77e9','#7df9ff','#ffe66d'][i%3];
        f.style.animationDelay=(Math.random()*1.2)+'s';
        celebrate.appendChild(f);
        setTimeout(()=>f.remove(),2000);
      }
    }
  </script>
